<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                                            xmlns:app="http://schemas.android.com/apk/res-auto"
                                            xmlns:tools="http://schemas.android.com/tools"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            app:layout_behavior="@string/appbar_scrolling_view_behavior"
                                            tools:showIn="@layout/activity_server">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_vertical_margin" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/activity_server_servername_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:errorEnabled="true">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/activity_server_servername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/dialog.main.server.name.hint"
                android:imeOptions="flagNoExtractUi"
                android:inputType="textUri"
                android:maxLines="1"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/activity_server_serveraddress_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:errorEnabled="true">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/activity_server_serveraddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/dialog.main.server.address.hint"
                android:imeOptions="flagNoExtractUi"
                android:inputType="textUri"
                android:maxLines="1"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/activity_server_serverport_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:errorEnabled="true">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/activity_server_serverport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/dialog.main.server.port.hint"
                android:imeOptions="flagNoExtractUi"
                android:inputType="number"
                android:maxLength="4"
                android:maxLines="1"/>
        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/activity_vertical_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="@dimen/activity_horizontal_margin"
                android:text="User Details"
                android:textAppearance="@style/TextAppearance.AppCompat.Button"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="center_vertical"
                android:background="@android:color/darker_gray"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_vertical_margin" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/activity_server_nickname_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:errorEnabled="true">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/activity_server_nickname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/server.add.nickname"
                android:imeOptions="flagNoExtractUi"
                android:inputType="textUri"
                android:maxLines="1"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/activity_server_ident_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:errorEnabled="true">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/activity_server_ident"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/server.add.identifier"
                android:imeOptions="flagNoExtractUi"
                android:inputType="textUri"
                android:maxLines="1"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/activity_server_nickname_alt_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:errorEnabled="true">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/activity_server_nickname_alt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/server.add.nickname.alt"
                android:imeOptions="flagNoExtractUi"
                android:inputType="textUri"
                android:maxLines="1"/>
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/activity_server_realname_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:errorEnabled="true">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/activity_server_realname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/server.add.realname"
                android:imeOptions="flagNoExtractUi"
                android:inputType="textUri"
                android:maxLines="1"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/activity_server_nickserv_password_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:errorEnabled="true">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/activity_server_nickserv_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/server.add.nickserv.password"
                android:imeOptions="flagNoExtractUi"
                android:inputType="textPassword"
                android:maxLines="1"/>
        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/activity_vertical_margin">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="@dimen/activity_horizontal_margin"
                android:text="Advanced"
                android:textAppearance="@style/TextAppearance.AppCompat.Button"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="center_vertical"
                android:background="@android:color/darker_gray"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/activity_vertical_margin" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/activity_server_commands_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:errorEnabled="true">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/activity_server_commands"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/server.add.serverCommands"
                android:imeOptions="flagNoExtractUi"
                android:inputType="textMultiLine|textUri"/>

        </android.support.design.widget.TextInputLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>